<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jinping.yohuo.WelcomeActivity">

    <ImageView
        android:id="@+id/welcome_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/welcome" />

    <ImageView
        android:id="@+id/welcome_mark_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa333333" />

    <Button
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:onClick="start"
        android:background="@drawable/selector_welcome_circle_btn"
        android:text="跳转"
        android:textColor="@color/color_select_welcom" />
</RelativeLayout>
